    <%= form_for(@match, html: {class: 'form-horizontal'}) do |f| %>
        <% if @match.errors.any? %>
            <div class="panel panel-danger">
              <div class="panel-heading">
                <%= t("general.form_error_message", count: @match.errors.count) %>
              </div>
              <div class="panel-body">
                <ul>
                  <% @match.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            </div>
        <% end %>
        <div class="form-group">
          <%= f.label :extra_time, '¿Tiempo extra?', class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= check_box 'p', 'db_column', {}, 'true', 'false' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :penalties, '¿Penales?', class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= check_box 'p', 'db_column', {}, 'true', 'false' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit 'Crear', class: "btn btn-primary" %>
          </div>
        </div>
    <% end %>
